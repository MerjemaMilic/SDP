<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/ng2">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:id="@+id/user_info_discover"
      android:weightSum="4"
      android:padding="8dp"
      android:background="#609966CC">

      <ImageView
          android:layout_width="60dp"
          android:layout_height="60dp"
         android:src="@drawable/ic_baseline_account_circle_24" />

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
         android:orientation="vertical"
         android:layout_marginLeft="8dp"
         android:layout_gravity="center_vertical">

         <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
            android:id="@+id/username_discover"
            android:textSize="22sp"
            android:textColor="@color/white"
            android:text="Username" />

         <TextView
             android:layout_width="match_parent"
             android:layout_height="match_parent"
            android:text="Normal"
            android:textSize="16sp"
            android:id="@+id/member_type"
            android:textColor="@color/white" />

      </LinearLayout>

   </LinearLayout>

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:weightSum="4"
      android:padding="8dp" >

      <androidx.cardview.widget.CardView
         android:id="@+id/card_view_review"
         android:layout_marginRight="8dp"
         app:cardCornerRadius="8dp"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
         android:layout_weight="1">
         
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">
            
            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
               android:layout_gravity="center_horizontal"
               android:src="@drawable/ic_baseline_event_note_24" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:text="Review"
               android:fontFamily="sans-serif"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/max_slider_indicator_size"/>
            
            
            
            
         </LinearLayout>         
         
         
      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/card_view_history"
          android:layout_marginRight="8dp"
          app:cardCornerRadius="8dp"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_baseline_history_24" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"
                android:fontFamily="sans-serif"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/max_slider_indicator_size"/>




         </LinearLayout>


      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/card_view_third"
          android:layout_marginRight="8dp"
          app:cardCornerRadius="8dp"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_baseline_event_note_24" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Review"
                android:fontFamily="sans-serif"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/max_slider_indicator_size"/>




         </LinearLayout>


      </androidx.cardview.widget.CardView>

      <androidx.cardview.widget.CardView
          android:id="@+id/card_view_notifications"
          android:layout_marginRight="8dp"
          app:cardCornerRadius="8dp"
          android:layout_width="0dp"
          android:layout_height="wrap_content"
          android:layout_weight="1">

         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center_horizontal"
                android:src="@drawable/ic_baseline_notifications_24" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Notifications"
                android:fontFamily="sans-serif"
                android:layout_gravity="center_horizontal"
                android:textSize="@dimen/max_slider_indicator_size"/>




         </LinearLayout>


      </androidx.cardview.widget.CardView>



   </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:orientation="vertical"
   android:padding="8dp">

   <ss.com.bannerslider.Slider
      android:id="@+id/banner_slider"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"  />

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="2dp">

<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
   android:layout_alignParentLeft="true"
   android:layout_alignParentStart="true"
   android:layout_centerVertical="true"
   android:gravity="center_vertical"
   android:text="Look Book"
   android:fontFamily="sans-serif"
   android:textColor="@color/white"
   android:textSize="18sp" />





</RelativeLayout>

 <androidx.recyclerview.widget.RecyclerView
    android:id="@+id/recycler_look_book"
     android:layout_width="match_parent"
     android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal" />

</LinearLayout>


